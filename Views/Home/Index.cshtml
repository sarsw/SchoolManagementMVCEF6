@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

        <div class="item active">
            <img src="~/Content/Images/backToSchool.jpg" alt="Los Angeles" style="width:100%;">
            <div class="carousel-caption">
                <h3>Back To School</h3>
                <p>Be prepared!</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/learningTools.jpeg" alt="Chicago" style="width:100%;">
            <div class="carousel-caption">
                <h3>The Right Equipment...</h3>
                <p>helps you learn!</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/neverStopLearning.png" alt="New York" style="width:100%;">
            <div class="carousel-caption">
                <h3>Never Stop Learning...</h3>
                <p>...ever!</p>
            </div>
        </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Courses</h2>
        <p>
            Use this option to view all course and offerings at this institution.
        </p>
        <button class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Courses")'">Learn More</button>
    </div>
    <div class="col-md-6">
        <h2>Students</h2>
        <p>View all students enrolled at this institution.</p>
        @*<p>@Html.ActionLink("All Students", "Index", "Students", new { @class = "btn btn-primary" })</p> --< not working *@
        <button class="btn btn-primary" onclick="location.href='@Url.Action( "Index", "Students")'">All Students</button>

    </div>

</div>